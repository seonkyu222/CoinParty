<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/myPage_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragmentMyPage"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="-193dp"
    android:background="@color/white"
    >


    <ImageView
        android:layout_width="52dp"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        app:srcCompat="@drawable/ic_icon_appbar_notification_28px"
        tools:ignore="VectorDrawableCompat"></ImageView>

    <ImageView
        android:layout_width="157dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="119dp"
        app:srcCompat="@drawable/ic_logo_appbar"
        tools:ignore="VectorDrawableCompat"></ImageView>

    <include
        android:id="@+id/include"
        layout="@layout/app_bar_main"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></include>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="50dp"
            android:background="@drawable/list_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="20px"
                android:paddingLeft="20px"
                android:src="@drawable/ic_icon_profile_developer_80px"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="50px"
                    android:paddingLeft="20px"
                    android:textSize="9pt"
                    android:textColor="#191919"
                    android:text="최선규"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="12px"
                    android:paddingLeft="20px"
                    android:textSize="6pt"
                    android:textColor="#191919"
                    android:text="컴퓨터모바일융합공학과"
                    />


            </LinearLayout>

        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/list_line"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="50px"
                android:paddingRight="10px"
                android:src="@drawable/ic_icon_mypage_bookmark_24px">
            </ImageView>

            <Button
                style="@style/Widget.AppCompat.Button.Borderless"
                android:id="@+id/scrap"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="left"
                android:paddingTop="50px"
                android:textSize="7pt"
                android:textColor="#191919"
                android:background="@color/white"
                android:text="스크랩한 게시글"
                >
            </Button>

        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/list_line"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="50px"
                android:paddingRight="10px"
                android:src="@drawable/ic_icon_mypage_list_24px">
            </ImageView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/history"
                android:paddingTop="50px"
                android:textSize="7pt"
                android:textColor="#191919"
                android:text="나의 활동"
                >
            </TextView>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/list_line"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="50px"
                android:paddingRight="10px"
                android:src="@drawable/ic_icon_mypage_history_24px">
            </ImageView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/record"
                android:paddingTop="50px"
                android:textSize="7pt"
                android:textColor="#191919"
                android:text="대여 이력"
                >
            </TextView>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/list_line"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="50px"
                android:paddingRight="10px"
                android:src="@drawable/ic_icon_ypage_setting_24px">
            </ImageView>
            <TextView
                android:id="@+id/option"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="50px"
                android:textSize="7pt"
                android:textColor="#191919"
                android:text="설정"
                >
            </TextView>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/list_line"
            />

    </LinearLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="#FFFFFF"
        app:labelVisibilityMode="unlabeled"
        app:menu="@menu/my_navigation_items"
        tools:context=".bottom_navi"></com.google.android.material.bottomnavigation.BottomNavigationView>

</FrameLayout>
